---
import Navbar from "../components/landing/Navbar.astro";
import Footer from "../components/landing/Footer.astro";
import "../styles/layout.css";

const { infoFooter, infoNav } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dario A. Plaza Leon</title>
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/favicon/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/favicon/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/favicon/favicon-16x16.png"
    />
    <link rel="manifest" href="/favicon/site.webmanifest" />
    <link
      rel="mask-icon"
      href="/favicon/safari-pinned-tab.svg"
      color="#5bbad5"
    />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#ffffff" />

    <script
      src="https://kit.fontawesome.com/3e9cace6d9.js"
      crossorigin="anonymous"></script>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/gh/devicons/devicon@v2.15.1/devicon.min.css"
    />
  </head>
  <body class="custom-gradient">
    <Navbar infoNavbar={infoNav} />
    <main class="w-screen">
      <slot />
    </main>
    <Footer footerInfo={infoFooter} />
  </body>
  <style>
    @import url("https://fonts.googleapis.com/css2?family=Work+Sans:ital,wght@1,500&display=swap");

    * {
      font-family: "Work Sans", sans-serif;
    }

    .custom-gradient {
      background-color: #11111b;
      width: 100%;
      height: 100%; /* Ajusta la altura seg√∫n tus necesidades */
      overflow-x: hidden;
    }

    main {
      overflow-x: hidden;
    }

    @media screen and (max-width: 767px) {
      body {
        overflow-x: hidden;
      }
    }
  </style>
</html>
