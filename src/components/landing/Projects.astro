---
import CardProject from "../card/CardProject.astro";

const { infoProjects } = Astro.props;

const projects = infoProjects.projects;
---

<section
  id="projectS"
  class="w-screen h-screen py-10 lg:py-0 lg:justify-evenly lg:h-screen flex flex-col space-y-16 items-center bg-gradient-to-b from-ctp-base to-ctp-crust"
>
  <h1 class="text-5xl font-bold text-ctp-peach">{infoProjects.title}</h1>
  <div
    class="w-11/12 flex flex-col lg:flex-row justify-center items-center gap-6"
  >
    {projects.map((project) => <CardProject projectInfo={project} />)}
  </div>
  <button class="bg-ctp-peach w-48 h-12 rounded-xl">
    <a href="/projects" class="text-[#0A1829]">Mas proyectos...</a>
  </button>
</section>
