---
import ContactForm from "../ContactForm.astro";

const { infoContact } = Astro.props
---

<section
  id="contacT"
  class="w-screen lg:h-[40rem] flex flex-col justify-evenly items-center bg-ctp-base"
>
<h1 class="text-4xl font-bold text-ctp-peach">{infoContact.title}</h1>
<div class=" w-5/6 flex flex-col items-center space-y-10 lg:w-4/6 h-full lg:h-4/6 lg:flex-row lg:space-x-14 pt-6">
  <div class="contactInfoContainer w-full lg:w-2/6 h-1/2 flex flex-col justify-center items-center">
    <h1 class="text-2xl">{infoContact.subtitle}</h1>
    <p class="pl-4 text-center pt-6">{infoContact.sub}</p>
    <div class="flex flex-col pt-4 text-ctp-peach">
      <a href="https://www.linkedin.com/in/dario-plaza/" target="_blank"><i class="fa-brands fa-linkedin text-2xl pr-2"></i>@dario-plaza</a>
      <a href="https://github.com/darioplazaleon" target="_blank"><i class="fa-brands fa-square-github text-2xl pr-2"></i>@darioplazaleon</a>
      <a href="mailto:darioplaza02@hotmail.com" target="_blank"><i class="fa-solid fa-square-envelope text-2xl pr-2"></i>darioplaza02@hotmail.com</a>
  </div>
  </div>
  <div class="w-4/6 h-full pb-4">
    <ContactForm infoForm={infoContact.form}/>
  </div>
</div>
</section>


<style>
  .contactInfoContainer {
    color: white;
  }

</style>