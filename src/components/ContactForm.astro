---
const { infoForm } = Astro.props
---

<form id="contactForm" action="https://formsubmit.co/darioplaza02@hotmail.com" method="POST" class="w-full flex flex-col gap-4">
    <div class="flex flex-col space-y-6 lg:flex-row lg:space-x-8 lg:space-y-0">
        <!-- Nombre -->
        <div class="inputCol lg:w-1/2">
            <label for="name" >{infoForm.name}</label>
            <input type="text" id="name" name="name" required>
        </div>
        <!-- Correo ElectrÃ³nico -->
        <div class="inputCol lg:w-1/2">
            <label for="email" >{infoForm.email}</label>
            <input type="email" id="email" name="email" required>
        </div>
    </div>
    <!-- Asunto -->
    <div class="inputCol">
        <label for="subject">{infoForm.subject}</label>
        <input type="text" id="subject" name="subject" required>
    </div>
    <!-- Mensaje -->
    <div class="inputCol">
        <label for="message">{infoForm.message}</label>
        <textarea id="message" name="message" rows="5" required></textarea>
    </div>
    <!-- Boton Submit -->
    <div class="buttonSubmit flex justify-center items-center lg:justify-end lg:pt-0">
        <button type="submit" class="bg-web-orange-500 w-32 h-8 rounded">{infoForm.button}</button>
    </div>
</form>

<style>
    label {
        color: white;
        padding-bottom: 6px;
    }

    .inputCol {
        display: flex;
        flex-direction: column;
    }

    input {
        border-radius: 5px;
        height: 32px;
        padding-left: 6px;
    }

    textarea {
        border-radius: 5px;
        padding-left: 6px;
    }

    .buttonSubmit {
        color: white;
    }
</style>