---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import tetrisImage from "../../images/projects/tetris.png";
import fruitImage from "../../images/projects/fruitmarket.png";
import inventoryManagement from "../../images/projects/inventory-management.png"

const { projectInfo, align } = Astro.props;

const labels = projectInfo.label;

const imageMap = {
  tetrisImage: tetrisImage,
  fruitImage: fruitImage,
  inventoryImage: inventoryManagement,
};

const projectImage = imageMap[projectInfo.image];
---

<div
  class={`w-full h-52 sm:h-60 flex flex-col ${align === "right" ? "sm:flex-row-reverse" : "sm:flex-row"} bg-ctp-base border-2 border-ctp-surface2 rounded-lg`}
>
  <Image
    src={projectImage}
    alt={projectInfo.title}
    class="h-40 sm:h-full w-full rounded-lg sm:w-1/3"
  />
  <div
    class="h-20 flex px-4 justify-around items-center sm:flex-col sm:h-full sm:w-2/3"
  >
    <p class="font-bold text-ctp-peach">{projectInfo.title}</p>
    <p class="text-ctp-text hidden sm:flex">{projectInfo.description}</p>
    <div class="flex w-10 sm:w-full px-4 gap-5">
      <a href={projectInfo.urlRepo} aria-label="Github de Dario Plaza"
        ><Icon name="mynaui:brand-github" class="text-3xl text-ctp-text" /></a
      >
      <div class="sm:flex gap-4 hidden">
        {
          labels.map((label, index) => (
            <span class="font-bold bg-ctp-peach text-xs w-20 h-8 rounded-xl flex items-center justify-center">
              {label}
            </span>
          ))
        }
      </div>
    </div>
  </div>
</div>
