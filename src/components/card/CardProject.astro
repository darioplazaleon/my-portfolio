---
import GithubIcon from "../../icons/GithubIcon.astro";

const { projectInfo } = Astro.props;
---

<div class="w-11/12 h-52 flex flex-col bg-ctp-base border-2 border-ctp-surface2 rounded-lg">
  <img
    src={projectInfo.image}
    alt={projectInfo.title}
    class="h-32 w-full rounded-lg"
  />
  <div class="h-20 flex px-2 justify-around items-center">
    <p class="font-semibold text-ctp-text">{projectInfo.title}</p>
    <a href={projectInfo.urlRepo}><GithubIcon /></a>
  </div>
</div>
