---
import { Icon } from "astro-icon/components";
import { getRelativeLocaleUrl } from "astro:i18n";

const { currentLocale } = Astro;
const { service, buttonText } = Astro.props;

---

<div class="w-80 h-96 bg-ctp-base rounded-xl p-5">
  <div class="flex flex-col h-full justify-around">
    <div
      class="bg-ctp-crust h-12 w-12 rounded-full flex items-center justify-center"
    >
      <Icon name=`mynaui:${service.ICON}` class="text-ctp-peach text-3xl" />
    </div>
    <div class="flex flex-col gap-2">
      <h3
        class="text-ctp-peach font-semibold text-xl flex-grow flex items-center"
      >
        {service.TITLE}
      </h3>
      <p class="text-ctp-text flex-grow flex items-center">
        {service.DESCRIPTION}
      </p>
    </div>
    <button
      class="w-40 h-10 bg-ctp-peach rounded-xl flex items-center justify-center gap-3"
    >
      <a href={getRelativeLocaleUrl(currentLocale ?? "", "contact")}
        >{buttonText}</a
      >
      <Icon name="mynaui:arrow-right" class="text-ctp-base text-2xl" />
    </button>
  </div>
</div>
